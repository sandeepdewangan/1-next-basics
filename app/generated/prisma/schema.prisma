generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:app.db"
}

// Models
model Product {
  id          Int     @id @default(autoincrement())
  title       String
  price       Int
  description String?
}
